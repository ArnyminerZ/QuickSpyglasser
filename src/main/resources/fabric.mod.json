{
  "schemaVersion": 1,
  "id": "quickspyglasser",
  "version": "${version}",
  "name": "Quick Spyglasser",
  "description": "Adds a keybind to use a spyglass anywhere in your inventory",
  "authors": [
    "Gluton"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/quick-spyglasser",
    "sources": "https://github.com/Gluton-Official/QuickSpyglasser",
    "issues": "https://github.com/Gluton-Official/QuickSpyglasser/issues"
  },
  "license": "LGPL-2.1",
  "icon": "assets/quickspyglasser/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.gluton.quickspyglasser.QuickSpyglasser"
    ],
    "client": [
      "com.gluton.quickspyglasser.QuickSpyglasserClient"
    ],
    "modmenu": [
      "com.gluton.quickspyglasser.config.QuickSpyglasserClientConfig\$QuickSpyglasserModMenu"
    ]
  },
  "mixins": [
    "quickspyglasser.mixins.json"
  ],

  "depends": {
    "cloth-config2": ">=5.0.38",
    "fabricloader": ">=0.11.6",
    "fabric": "*",
    "minecraft": "1.17.x",
    "java": ">=16"
  },
  "suggests": {
    "modmenu": ">=2.0.5",
    "trinkets": ">=3.0.2"
  }
}
